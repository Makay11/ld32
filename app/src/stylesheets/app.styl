body,
body *
	margin 0
	padding 0

canvas
	width 100%
	height 100%

.hud
	.energyMeter
		width 20%
		height 3%
		position fixed
		top 10px
		right 39%
		background #CCCCCC
		padding 5px

		.energy
			width 0%
			height 100%
			background-color #00AAFF

	.scores
		position fixed
		top 10px
		right 0

		.score,
		.monstersKilled
			background-color #CCCCCC
			height 30px
			padding 5px
			margin-bottom 10px

			.text
				font-weight bold
				font-size 30px
				height 30px
				line-height 30px

		.monstersKilled
			p,
			img
				float left

			img
				width 30px
				height 30px
				margin-left 10px
