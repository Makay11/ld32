border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

body,
body *
	margin 0
	padding 0

canvas
	width 100%
	height 100%

#scores
	position fixed
	top 10px
	right -25px

	#text
		text-align right
		color white
		margin-right 10px
		font-size 25px
		font-weight bold
		height 30px
		line-height 30px

	.background
		background-color #DCDCDC
		border-radius 10px
		-moz-border-radius 10px
		-webkit-border-radius: 10px
		padding 5px
		padding-right 20px
		margin-bottom 10px

	#monstersKilled
		#monster
			width 25px
			height 25px
			margin-left 10px
			vertical-align center

#energyMeter
	width 200px
	height 20px
	position absolute
	top 10px
	right 125px
	background #ABFAAA
	border-radius 25px
	padding 10px
	box-shadow inset 0 -1px 1px rgba(255,255,255,0.3)
	
	span
		vertical-align center
		text-align middle

	#energy
		display block
		width 0%
		height 100%
		border-top-right-radius 8px
		border-bottom-right-radius 8px
		border-top-left-radius 20px
		border-bottom-left-radius 20px
		background-color rgb(43, 194, 83)
		background-image linear-gradient(center bottom, rgb(43,194,83) 37%, rgb(84,240,84) 69%)
		box-shadow inset 0 2px 9px rgba(255,255,255,0.3), inset 0 -2px 6px rgba(0,0,0,0.4)
		position relative
		overflow hidden
